<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             x:Class="CrossedCastReceiver.MainPage">

     <StackLayout Orientation="Horizontal">
        <skia:SKCanvasView x:Name="skiascreen" PaintSurface="skiascreen_PaintSurface"/>
        <StackLayout x:Name="rest">
            <Button x:Name="speaker" Text="🔊"/>
            <ScrollView x:Name="scroller" VerticalOptions="EndAndExpand">
                <StackLayout x:Name="MessageList">
                </StackLayout>
            </ScrollView>
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="MessageBox" HorizontalOptions="CenterAndExpand"/>
                <Image x:Name="SendButton" Source="send.png" />
            </StackLayout>
        </StackLayout>
    </StackLayout> 

</ContentPage>
